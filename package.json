{
  "name": "bravado-core",
  "version": "0.13.3",
  "description": "REST (Level 3/HATEOAS) API Framework",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "reinstall": "rm -rf node_modules && yarn install",
    "lint": "esw . --ext .js",
    "lint:fix": "yarn lint --fix",
    "lint:watch": "yarn lint --watch",
    "lint:changed": "lint-staged",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "engines": {
    "node": ">=8.3"
  },
  "main": "lib/index.js",
  "author": "Losant <hello@losant.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Losant/bravado-core/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Losant/bravado-core.git"
  },
  "keywords": [
    "rest",
    "restful",
    "server",
    "api"
  ],
  "lint-staged": {
    "*.js": "esw"
  },
  "dependencies": {
    "defaults": "^1.0.3",
    "error": "^7.0.2",
    "lodash": "^4.17.11",
    "is-my-json-valid": "^2.19.0",
    "js-yaml": "^3.13.1",
    "json-refs": "^3.0.12",
    "jsonwebtoken": "^8.3.0",
    "node-dir": "^0.1.17",
    "object-assign": "^4.1.1",
    "q": "^1.5.1",
    "traverse": "^0.6.6",
    "uri-template": "^1.0.1"
  },
  "devDependencies": {
    "@losant/eslint-config-losant": "^1.3.4",
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0"
  },
  "eslintConfig": {
    "extends": "@losant/eslint-config-losant/env/node",
    "rules": {
      "guard-for-in": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
